<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".compTest.TestFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">
        <TextView
            android:id="@+id/testTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab"
            android:layout_marginHorizontal="20dp"
            android:textStyle="bold"
            />

        <HorizontalScrollView
            android:id="@+id/testBtnScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/testTitle"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_blue_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Blue"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_green_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Green"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_red_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Red"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_blue_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Blue"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_green_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Green"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_red_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Red"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/testBtnSample"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_red_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="sample"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_yellow_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Yellow"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_blue_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Blue"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_green_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Green"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_red_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Red"/>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardBackgroundColor="@color/gx_blue_l_5"
                            android:layout_margin="5dp"
                            android:clickable="true">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="9dp"
                                android:textStyle="bold"
                                android:text="Blue"/>
                        </androidx.cardview.widget.CardView>






                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/testFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_f8"
            android:layout_below="@+id/testBtnScroll">


        </RelativeLayout>


    </RelativeLayout>

</FrameLayout>